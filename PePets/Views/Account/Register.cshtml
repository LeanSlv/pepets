@model PePets.Models.Register

    <div id="registerModalForm">
        <div class="modal-header">
            <h3 class="col-12 modal-title text-center" id="AuthLabel">
                Регистрация
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </h3>
        </div>

        <div class="modal-body">
            <form method="post" asp-controller="Account" asp-action="Register" id="registerForm">
                <div class="form-group">
                    <input class="form-control" type="text" asp-for="Name" placeholder="Введите ваше имя" />
                    <span class="text-danger small" asp-validation-for="Name"></span>
                </div>

                <div class="form-group">
                    <input class="form-control" type="email" asp-for="Email" placeholder="Введите ваш email" />
                    <span class="text-danger small" asp-validation-for="Email"></span>
                </div>

                <div class="form-group">
                    <input class="form-control" type="password" asp-for="NewPassword" placeholder="Придумайте пароль" />
                    <span class="text-danger small" asp-validation-for="NewPassword"></span>
                </div>

                <div class="form-group">
                    <input class="form-control" type="password" asp-for="ConfirmPassword" placeholder="Подтвердите пароль" />
                    <span class="text-danger small" asp-validation-for="ConfirmPassword"></span>
                </div>

                <div class="text-danger small" asp-validation-summary="All"></div>

                <div>
                    <input class="btn btn-primary btn-lg btn-block" type="submit" value="Зарегистрироваться" />
                </div>
            </form>
        </div>
    </div>

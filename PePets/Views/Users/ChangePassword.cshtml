@model PePets.Models.ChangePasswordViewModel

<div>
    <h3>Изменить пароль</h3>

    <div>
        <form asp-controller="Users" asp-action="ChangePassword" method="post">
            <input type="hidden" asp-for="Id" />

            <div asp-validation-summary="ModelOnly"></div>

            <div>
                <label>Введите старый пароль</label>
                <input type="password" asp-for="OldPassword" />
                <span asp-validation-for="OldPassword"></span>
            </div>

            <div>
                <label>Введите новый пароль</label>
                <input type="password" asp-for="NewPassword" />
                <span asp-validation-for="NewPassword"></span>
            </div>

            <div>
                <label>Подтвердите новый пароль</label>
                <input type="password" asp-for="ConfirmNewPassword" />
                <span asp-validation-for="ConfirmNewPassword"></span>
            </div>

            <div>
                <input type="submit" value="Изменить" />
            </div>
        </form>
    </div>
</div>
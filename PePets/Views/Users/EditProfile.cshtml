@model PePets.Models.EditUserProfileViewModel

<div class="container">
    <h1>Редактирование профиля</h1>

    <form asp-controller="Users" asp-action="EditProfile" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />

        <div>
            <label asp-for="FirstName">First name</label>
            <input type="text" asp-for="FirstName" />
            <span asp-validation-for="FirstName"></span>
        </div>

        <div>
            <label asp-for="SecondName">Second name</label>
            <input type="text" asp-for="SecondName" />
            <span asp-validation-for="SecondName"></span>
        </div>

        <div>
            <label asp-for="Avatar">Change avatar</label>
            <input type="file" accept="image/*" asp-for="Avatar"/>
            <span asp-validation-for="Avatar"></span>
            <div>
                <p>Current avatar</p>
                @if (string.IsNullOrEmpty(Model.Avatar))
                {
                    <img src="~/img/user.png" style="max-height: 100px; max-width: 100px" />
                }
                else
                {
                    <img src=@Model.Avatar style="max-height: 100px; max-width: 100px" />
                }
            </div>
        </div>

        <div>
            <label asp-for="Age">Age</label>
            <input type="number" asp-for="Age" />
            <span asp-validation-for="Age"></span>
        </div>

        <div>
            <label asp-for="Location">Location</label>
            <input type="text" asp-for="Location" />
            <span asp-validation-for="Location"></span>
        </div>

        <div>
            <label asp-for="Gender">Gender</label>
            <select asp-for="Gender">
                @foreach (string gender in Enum.GetNames(typeof(Genders)))
                {
                    <option value="@Enum.Parse(typeof(Genders), gender)">@gender</option>
                }
            </select>
            <span asp-validation-for="Gender"></span>
        </div>

        <input type="submit" value="Сохранить" />
    </form>
    
</div>
